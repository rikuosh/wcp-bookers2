<div class="col-md-3">
 <h2>User info</h2>
 <div><%= attachment_image_tag user1, :profile_image, :fill, 100,100, format: "jpeg", fallback:"no_image.jpeg" %></div>
  <table class="table">
   <tbody>
    <tr></tr>
    <tr>
     <th>name</th>
     <th><%= user1.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <th><%= user1.introduction %></th>
    </tr>
   </tbody>
  </table>
<div class="row">
 <%= link_to "", edit_user_path(user1), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: book, local:true do |f| %>
  <div class="form-group">
   <label for="book_title">Title</label>
   <div><%= f.text_field :title %></div>
  </div>
  <div class="form-group">
   <label for="book_opinion">Opinion</label>
   <div><%= f.text_field :body %></div>
  </div>

  <div class="form-group">
   <%= f.submit "Create Book", class:"btn btn-success" %>
  </div>
<% end %>
</div>