<div class="col-md-3">
 <h2>User info</h2>
 <div><%= attachment_image_tag user1, :profile_image, :fill, 100,100, format: "jpeg", fallback:"no_image.jpeg" %></div>
  <table class="table">
   <tbody>
    <tr></tr>
    <tr>
     <th>name</th>
     <th><%= user1.name %></th>
    </tr>
    
    <tr>
     <th>introduction</th>
     <th><%= user1.introduction %></th>
    </tr>

    <tr>
     <th>follow</th>
     <th>
     <%= link_to follows_user_path(user1) do %>
     <%= following_users.count %>
     <% end %>
     </th>
    </tr>

    <tr>
     <th>follower</th>
     <th>
     <%= link_to followers_user_path(user1) do %>
     <%= follower_users.count %>
     <% end %>
     </th>
    </tr>
    
    <tr>
     <th>
     <%= link_to "", edit_user_path(user1), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
     </th>
    </tr>
    
    <tr>
     <% if current_user != user1 %>
     <th>
     <% if current_user.following?(user1) %>
     <%= link_to 'フォロー外す', user_relationships_path(user1.id), method: :delete, class: "btn-sm btn-danger" %>
     <% else %>
     <%= link_to 'フォローする', user_relationships_path(user1.id), method: :POST, class:"btn-sm btn-success" %>
     <% end %>
     </th>
     <% end %>
    </tr>
    
   </tbody>
  </table>


<h2 class="mt-3">New book</h2>
<%= form_with model: book, local:true do |f| %>
  <div class="form-group">
   <label for="book_title">Title</label>
   <div><%= f.text_field :title %></div>
  </div>
  <div class="form-group">
   <label for="book_opinion">Opinion</label>
   <div><%= f.text_field :body %></div>
  </div>

  <div class="form-group">
   <%= f.submit "Create Book", class:"btn btn-success" %>
  </div>
<% end %>
</div>

