<div class="container px-5 px-sm-0">
 <div class="row">

  <% if @book_comment.errors.any? %>
<div id="error_explanation">
  <%= @book_comment.errors.count %> errors prohibited this obj from being saved:
  <% @book_comment.errors.full_messages.each do |message| %>
   <ul>
     <li>
    <%= message %>
     </li>
   </ul>
  <% end %>
</div>
<% end %>



  <%= render "books/list", book: @book1, user1: @book.user %>

  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
       <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br/>
       <%= link_to @book.user.name, user_path(@book.user.id) %></td>
       <td><%= link_to @book.title, book_path(@book.id) %></td>
       <td><%= @book.body %></td>
       <td>
       <% if @book.favorited_by?(current_user) %>
        <p>
         <%= link_to book_favorites_path(@book), method: :delete do %>
         <i class="far fa-heart unlike-btn"><%= @book.favorites.count %></i>
         <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to book_favorites_path(@book), method: :post do %>
          <i class="far fa-heart like-btn"><%= @book.favorites.count %></i>
          <% end %>
        </p>
       <% end %>
       </td>
       <td>
        <p>コメント数:<%=@book.book_comments.count %></p>
       </td>
       <% if @book.user == current_user %>
       <td><%= link_to"Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
       <td><%= link_to"Destroy", book_path(@book.id), method: :delete,data: {confirm: "Are you sure？"}, class:"btn btn-sm btn-danger destroy" %></td>
       <td></td>
       <% end %>
     </tr>
       <% @book.book_comments.each do |book_comment| %>
     <tr>
       <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %><br>
       <%= link_to book_comment.user.name, user_path(@book.user.id) %></td>
       <td><%= book_comment.comment %></td>
       <% if book_comment.user == current_user%>
        <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %></td>
       <% end %>
     </tr>
       <% end %>
    <tr>
     <td>
      <%= form_with(model:[@book, @book_comment], local: true) do |f|%>
       <%= f.text_area :comment, row:"5" %>
       <%= f.submit "送信" %>
      <% end %>
     </td>
    </tr>
   </tbody>
  </table>
 </div>
  </div>
 </div>