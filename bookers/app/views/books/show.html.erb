<div class="container px-5 px-sm-0">
 <div class="row">
  <%= render "books/list", book: @book1, user1: @book.user %>

  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
       <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br/>
       <%= link_to @book.user.name, user_path(@book.user.id) %></td>
       <td><%= link_to @book.title, book_path(@book.id) %></td>
       <td><%= @book.body %></td>
       <% if @book.user == current_user %>
       <td><%= link_to"Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
       <td><%= link_to"Destroy", book_path(@book.id), method: :delete,data: {confirm: "Are you sureï¼Ÿ"}, class:"btn btn-sm btn-danger destroy" %></td>
       <td></td>
       <% end %>
     </tr>
   </tbody>
  </table>
 </div>
  </div>
 </div>