<main>
<div class="container px-5 px-sm-0">
 <div class="row">

  <%= render "books/list", book: @book, user1: @user1 %>
  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
     <tr>
      <td>
       <%= link_to user_path(@user1.id) do %>
       <%= attachment_image_tag @user1, :profile_image, :fill, 100,100, format: "jpeg", fallback:"no_image.jpeg" %>
       <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to"コメント数:#{book.book_comments.count}", book_path(book.id) %>
       </td>
     </tr>
    <% end %>
    </tbody>
   </table>
  </div>
 </div>
 </main>