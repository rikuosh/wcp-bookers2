<% if @user.errors.any? %>
<div id="error_explanation">
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
   <ul>
     <li>
    <%= message %>
     </li>
   </ul>
  <% end %>
</div>
<% end %>

<div class="container">
 <div class="row">
   <div class="col-sm-12 col-md-8 collg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f|%>
    <div class="form-group">
      <label for="user_name">Name</label>
      <div><%= f.text_field :name, autofocus: true, id:"inputName" %></div>
    </div>
    <div class="form-group">
      <label for="user_image">Image</label>
      <div><%= f.attachment_field :profile_image %></div>
    </div>
    <div class ="form-group">
      <label for"user_introduction">Introduction</label>
      <div><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %></div>
    </div>
    <div class="form-group">
      <div><%= f.submit "Update User", class:"btn btn-secondary" %></div>
    <% end %>
    </div>
   </div>
 </div>
</div>